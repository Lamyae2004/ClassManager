<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:padding="16dp"
    android:background="@drawable/bg_document_item"
    android:foreground="?attr/selectableItemBackgroundBorderless">

    <!-- Icone document à gauche -->
    <ImageView
        android:id="@+id/iv_document_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_document"
        android:contentDescription="@string/document_icon"
        android:layout_marginEnd="16dp"
        app:tint="@color/text_secondary"/>


    <!-- Contenu principal -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <!-- Nom du document -->
        <TextView
            android:id="@+id/tv_nom_document"
            android:text="Nom du document"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"/>

        <!-- Matière avec badge -->
        <TextView
            android:id="@+id/tv_matiere_document"
            android:text="Mathématiques"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_matiere_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:maxLines="2"/>

        <!-- Type et taille -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Type -->
            <TextView
                android:id="@+id/tv_type_document"
                android:text="Cours · PDF"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_type"
                android:drawablePadding="4dp"
                android:drawableTint="@color/text_tertiary"/>

            <!-- Séparateur -->
            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginHorizontal="8dp"
                android:background="@color/divider"/>

            <!-- Taille -->
            <TextView
                android:id="@+id/tv_taille_document"
                android:text="2.4 MB"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_size"
                android:drawablePadding="4dp"
                android:drawableTint="@color/text_tertiary"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Bouton d'action -->
    <ImageButton
        android:id="@+id/btn_download"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_download"
        android:contentDescription="@string/telecharger"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        app:tint="@color/accent"/>
</LinearLayout>