<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_normal"
        android:background="?attr/colorPrimary">

        <TextView
            android:text="@string/absences_title"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/absences_subtitle"
            android:textSize="@dimen/text_size_body"
            android:textColor="@color/text_white_secondary"
            android:layout_marginTop="@dimen/spacing_xs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Filter Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_normal"
        app:cardCornerRadius="@dimen/corner_radius_small"
        app:cardElevation="@dimen/elevation_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <TextView
                android:text="@string/filter_by_subject"
                android:textSize="@dimen/text_size_body"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/spinnerMatiere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/button_height_min"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Absences List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerAbsences"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/spacing_small"
        android:clipToPadding="false"/>

</LinearLayout>