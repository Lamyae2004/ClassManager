<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Guideline pour centrer verticalement -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15"/>

        <!-- Titre -->
        <TextView
            android:id="@+id/documentPageTitle"
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"

            android:layout_height="wrap_content"
            android:text="Déposer un document"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/guidelineTop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp"/>

        <!-- Champ Classe (Spinner) -->
        <Spinner
            android:id="@+id/documentClasse"
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="50dp"
            android:prompt="@string/prompt_classe"
            android:background="@drawable/input_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/documentPageTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <!-- Champ Module (Spinner) -->
        <Spinner
            android:id="@+id/documentModule"
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="50dp"
            android:prompt="@string/prompt_module"
            android:background="@drawable/input_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/documentClasse"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>


        <!-- Champ Titre -->
        <EditText
            android:id="@+id/documentTitle"
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"

            android:layout_height="50dp"
            android:hint="Titre du document"
            android:padding="12dp"
            android:background="@drawable/input_background"
            app:layout_constraintTop_toBottomOf="@id/documentModule"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <!-- Sélecteur de Type de Document -->
        <Spinner
            android:id="@+id/documentType"
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"

            android:layout_height="50dp"
            android:entries="@array/document_types"
            android:background="@drawable/input_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/documentTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <!-- Bouton Choisir un fichier -->
        <Button
            android:id="@+id/documentSelectFile"
            android:layout_width="0dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"

            android:layout_height="50dp"
            android:text="Choisir un fichier"
            android:background="@drawable/input_background"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/documentType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Bouton Ajouter le fichier -->
        <Button
            android:id="@+id/documentUploadButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Ajouter le fichier"
            android:background="@drawable/input_background"
            android:textColor="@android:color/white"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/documentSelectFile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
