<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/spacing_none"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_modern">

    <!-- Header avec gradient -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog_header"
        android:padding="@dimen/spacing_xl"
        android:elevation="@dimen/elevation_medium">

        <ImageView
            android:layout_width="@dimen/icon_size_header"
            android:layout_height="@dimen/icon_size_header"
            android:src="@drawable/ic_document"
            android:layout_gravity="center_horizontal"
            app:tint="@color/text_white"
            android:contentDescription="@string/cd_document_icon"
            android:layout_marginBottom="@dimen/spacing_medium"/>

        <TextView
            android:text="@string/dialog_justify_title"
            android:textSize="@dimen/text_size_header"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/dialog_justify_subtitle"
            android:textSize="@dimen/text_size_caption"
            android:textColor="@color/text_white_secondary"
            android:gravity="center"
            android:layout_marginTop="@dimen/spacing_xs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xl">

        <!-- Absence Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            app:cardCornerRadius="@dimen/corner_radius_medium"
            app:cardElevation="@dimen/elevation_none"
            app:strokeWidth="@dimen/stroke_width_thin"
            app:strokeColor="@color/stroke_indigo_light"
            android:animateLayoutChanges="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_normal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/icon_size_xlarge"
                    android:layout_height="@dimen/icon_size_xlarge"
                    android:src="@drawable/ic_info_circle"
                    app:tint="@color/primary_indigo"
                    android:contentDescription="@string/cd_info_icon"
                    android:layout_marginEnd="@dimen/spacing_normal"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:text="@string/absence_details_label"
                        android:textSize="@dimen/text_size_tiny"
                        android:textStyle="bold"
                        android:textColor="@color/text_hint"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtInfoAbsence"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_primary"
                        android:lineSpacingMultiplier="1.3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Communication mobile\n29/12/2025 | 16:15 - 18:15"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Motif Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            android:hint="@string/motif_hint"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusTopStart="@dimen/corner_radius_medium"
            app:boxCornerRadiusTopEnd="@dimen/corner_radius_medium"
            app:boxCornerRadiusBottomStart="@dimen/corner_radius_medium"
            app:boxCornerRadiusBottomEnd="@dimen/corner_radius_medium"
            app:boxStrokeWidth="@dimen/stroke_width_thin"
            app:boxStrokeColor="@color/input_stroke_color"
            app:hintTextColor="@color/primary_indigo">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtMotif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:maxLines="5"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:textSize="@dimen/text_size_body"
                android:padding="@dimen/spacing_normal"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- File Upload Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/corner_radius_medium"
            app:cardElevation="@dimen/elevation_none"
            app:strokeWidth="@dimen/stroke_width_thin"
            app:strokeColor="@color/border_light"
            android:animateLayoutChanges="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_normal">

                <!-- Header section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_medium">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:src="@drawable/ic_attach_file"
                        app:tint="@color/accent_red"
                        android:contentDescription="@string/cd_attach_icon"
                        android:layout_marginEnd="@dimen/spacing_small"/>

                    <TextView
                        android:text="@string/piece_justificative_label"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="@string/required_badge"
                        android:textSize="@dimen/text_size_tiny"
                        android:textStyle="bold"
                        android:textColor="@color/text_white"
                        android:background="@drawable/bg_badge_required"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="@dimen/spacing_xs"
                        android:paddingBottom="@dimen/spacing_xs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Upload button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnJoindre"
                    android:text="@string/choose_file_button"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_standard"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeWidth="@dimen/stroke_width_thin"
                    app:strokeColor="@color/primary_indigo"
                    app:cornerRadius="@dimen/corner_radius_small"
                    app:iconGravity="textStart"
                    app:iconPadding="@dimen/spacing_medium"
                    android:textColor="@color/primary_indigo"/>

                <!-- File selected indicator -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardFileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/corner_radius_small"
                    app:cardElevation="@dimen/elevation_none"
                    app:cardBackgroundColor="@color/bg_success"
                    android:animateLayoutChanges="true"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_normal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/icon_size_large"
                            android:layout_height="@dimen/icon_size_large"
                            android:src="@drawable/ic_check_circle_filled"
                            app:tint="@color/accent_green"
                            android:contentDescription="@string/cd_check_icon"
                            android:layout_marginEnd="@dimen/spacing_medium"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:text="@string/file_selected_label"
                                android:textSize="@dimen/text_size_tiny"
                                android:textColor="@color/accent_green_dark"
                                android:textStyle="bold"
                                android:layout_marginBottom="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/txtFileName"
                                android:textSize="@dimen/text_size_body"
                                android:textColor="@color/accent_green_darker"
                                android:textStyle="bold"
                                android:maxLines="2"
                                android:ellipsize="middle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="certificat_medical_2024.pdf"/>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/btnRemoveFile"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_close"
                            app:tint="@color/text_secondary"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="@dimen/spacing_xs"
                            android:contentDescription="@string/cd_remove_file"
                            android:layout_marginStart="@dimen/spacing_small"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Info formats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/spacing_medium">

                    <ImageView
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:src="@drawable/ic_info"
                        app:tint="@color/text_hint"
                        android:contentDescription="@string/cd_info_icon"
                        android:layout_marginEnd="6dp"/>

                    <TextView
                        android:text="@string/accepted_formats_info"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/text_secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>